{
  "swagger": "2.0",
  "info": {
    "version": "v1",
    "title": "Demeter API",
    "description": "The first version of the Demeter API.\n"
  },
  "host": "demeter.com",
  "basePath": "/rest",
  "schemes": [
    "http"
  ],
  "produces": [
    "application/json"
  ],
  "consumes": [
    "application/json"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Get all machines list",
        "responses": {
          "200": {
            "description": "The list with all machines",
            "schema": {
              "$ref": "#/definitions/Cmls"
            }
          }
        }
      }
    },
    "/{cmlId}/demeter": {
      "get": {
        "description": "Get information about a device",
        "operationId": "getDemeter",
        "parameters": [
          {
            "name": "cmlId",
            "in": "path",
            "description": "ID of cml",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "The user object",
            "schema": {
              "$ref": "#/definitions/Demeter"
            }
          }
        }
      },
      "post": {
        "description": "Switch digital outputs ON/OFF",
        "operationId": "postActuators",
        "parameters": [
          {
            "name": "cmlId",
            "in": "path",
            "description": "ID of cml",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/DigitalOutputs"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The user object for change digital output values",
            "schema": {
              "$ref": "#/definitions/DigitalOutputs"
            }
          }
        }
      }
    },
    "/{cmlId}/fsm": {
      "get": {
        "description": "Get state machines list",
        "operationId": "getFsm",
        "parameters": [
          {
            "name": "cmlId",
            "in": "path",
            "description": "ID of cml",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "The user object for change digital output values",
            "schema": {
              "$ref": "#/definitions/StateMachines"
            }
          }
        }
      },
      "post": {
        "description": "schedule task for excution",
        "operationId": "triggerFsmEvent",
        "parameters": [
          {
            "name": "cmlId",
            "in": "path",
            "description": "ID of cml",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/TriggerEvent"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Current list of scheduled events",
            "schema": {
              "$ref": "#/definitions/StateMachines"
            }
          }
        }
      }
    },
    "/{cmlId}/schedule": {
      "get": {
        "description": "Get information about scheduled events",
        "operationId": "getSchedule",
        "parameters": [
          {
            "name": "cmlId",
            "in": "path",
            "description": "ID of cml",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "The info object list schduled events",
            "schema": {
              "$ref": "#/definitions/ScheduledEvents"
            }
          }
        }
      },
      "post": {
        "description": "schedule task for excution",
        "operationId": "postSchedule",
        "parameters": [
          {
            "name": "cmlId",
            "in": "path",
            "description": "ID of cml",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/ScheduledEvents"
