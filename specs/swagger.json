          }
        ],
        "responses": {
          "200": {
            "description": "Current list of scheduled events",
            "schema": {
              "$ref": "#/definitions/ScheduledEvents"
            }
          }
        }
      }
    },
    "/{cmlId}/exception": {
      "get": {
        "description": "Get information about scheduled events",
        "operationId": "getScheduleException",
        "parameters": [
          {
            "name": "cmlId",
            "in": "path",
            "description": "ID of cml",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "The info object list schduled events",
            "schema": {
              "$ref": "#/definitions/ScheduledExceptions"
            }
          }
        }
      },
      "post": {
        "description": "schedule task for excution",
        "operationId": "postScheduleException",
        "parameters": [
          {
            "name": "cmlId",
            "in": "path",
            "description": "ID of cml",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/ScheduledException"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The info object list schduled events",
            "schema": {
              "$ref": "#/definitions/ScheduledException"
            }
          }
        }
      }
    },
    "/{cmlId}/exception/{exceptionId}": {
      "delete": {
        "summary": "Deletes a task",
        "description": "",
        "operationId": "deleteScheduleException",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "cmlId",
            "in": "path",
            "description": "Task id to delete",
            "required": true,
            "type": "string"
          },
          {
            "name": "exceptionId",
            "in": "path",
            "description": "Task id to delete",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "The info object list scheduled events",
            "schema": {
              "$ref": "#/definitions/ScheduledExceptions"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Task not found"
          }
        }
      }
    }
  },
